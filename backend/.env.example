# ================================
# Backend Environment Variables for Railway + MongoDB
# ================================

# Database (MongoDB on Railway)
# Format for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name
# Format for Railway MongoDB: mongodb://username:password@host:port/database_name
DATABASE_URL="mongodb+srv://username:password@your-cluster.mongodb.net/contesthub?retryWrites=true&w=majority"

# Alternative: MySQL on Railway (uncomment if using MySQL)
# DATABASE_URL="mysql://username:password@host:port/contesthub"

# JWT Secret (QUAN TRỌNG: thay đổi trong production!)
JWT_SECRET="your_super_secret_jwt_key_here_change_in_production"

# Server Configuration
PORT=3001
NODE_ENV=production

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Gemini AI API Key
API_KEY=your_gemini_api_key_here

# CORS Configuration (thêm domain frontend của bạn)
CORS_ORIGIN=http://localhost:5173,https://your-frontend-domain.railway.app

# Google Apps Script (optional - for media & sheet sync)
GOOGLE_APPS_SCRIPT_URL=your_google_apps_script_url

# Password Reset (optional)
PASSWORD_RESET_APPS_SCRIPT_URL=
PASSWORD_RESET_API_KEY=
